{
  "name": "shared-things-daemon",
  "version": "2.0.0",
  "description": "Sync Things 3 projects between multiple macOS users",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "shared-things": "dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/cli.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "keywords": [
    "things",
    "things3",
    "sync",
    "macos",
    "productivity",
    "todo",
    "collaboration",
    "daemon",
    "launchd",
    "cli"
  ],
  "author": "yungweng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yungweng/shared-things.git"
  },
  "bugs": {
    "url": "https://github.com/yungweng/shared-things/issues"
  },
  "homepage": "https://github.com/yungweng/shared-things#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.6.2",
    "commander": "^12.0.0",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@shared-things/common": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/update-notifier": "^6.0.8",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
